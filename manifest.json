{
  "name": "Partner Operations Toolkit (POT)",
  "version": "1.0",
  "description": "POT will add two asterisks to all locked document titles in a selected folder.",
  "manifest_version": 2,
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "Partner Operations Toolkit (POT)",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "https://www.dotloop.com/my/templates/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.dotloop.com/*"],
      "js": ["contentscript.js"]
    }
  ],
  "commands": {
    "scan-documents": {
      "suggested_key": {
        "default": "Alt+Shift+5",
        "mac": "MacCtrl+Shift+5"
      },
      "description": "Scan documents"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  }
}
